adPsUser:
	@docker exec -it postgres bin/bash
	@psql -U postgres  -p 5432
	@create user ${PostUser} with password ${PostPass};
	@create database ${[PostDb]} owner ${PostUser};
	@exit
    #给用户授权
	@psql -U postgres -d ${PostDb} -p 5432
	@grant all privileges on database ${PostDb} to ${PostUser};
	@grant usage on schema public to ${PostUser};
	@grant all privileges on all tables in schema public to ${PostUser};
	@grant all privileges on all sequences in schema public to ${PostUser};
	@grant select,insert,update,delete on all tables in schema public to ${PostUser};
	@grant all on schema public to ${PostUser};